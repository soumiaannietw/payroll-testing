{
  "name": "playwright-typescript-framework",
  "version": "1.0.0",
  "description": "A complete Playwright + TypeScript test automation framework for UI and API testing",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test tests/ui --headed",
    "test:api": "playwright test tests/api",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report test-results/html-report",
    "clean": "rm -rf test-results"
  },
  "keywords": [
    "playwright",
    "typescript",
    "test-automation",
    "ui-testing",
    "api-testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}

